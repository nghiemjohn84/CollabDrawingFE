<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@android:color/holo_blue_dark"
        android:id="@+id/ConstraintLayout">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_editText_login"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="username" android:paddingLeft="10dp"
            android:background="#F2F2F2"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_editText_login" app:layout_constraintEnd_toEndOf="@+id/username_editText_login"
            app:layout_constraintStart_toStartOf="@+id/username_editText_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_editText_login" android:hint="password"
            android:paddingLeft="10dp" android:background="#F2F2F2"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/login_button_login" app:layout_constraintEnd_toEndOf="@+id/password_editText_login"
            app:layout_constraintStart_toStartOf="@+id/password_editText_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_editText_login"/>
</androidx.constraintlayout.widget.ConstraintLayout>