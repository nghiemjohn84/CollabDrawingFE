<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity" android:background="@android:color/holo_blue_dark">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_editText_registration" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="username" android:paddingLeft="10dp"
            android:background="@android:color/background_light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_editText_registration"
            app:layout_constraintEnd_toEndOf="@+id/username_editText_registration"
            app:layout_constraintStart_toStartOf="@+id/username_editText_registration"
            android:hint="password"
            android:paddingLeft="10dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_editText_registration"
            app:layout_constraintHorizontal_bias="0.0" android:background="@android:color/background_light"
            android:text="1234"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_editText_registration"
            app:layout_constraintStart_toStartOf="@+id/username_editText_registration"
            app:layout_constraintEnd_toEndOf="@+id/username_editText_registration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_editText_registration"
            android:hint="email" android:paddingLeft="10dp" app:layout_constraintHorizontal_bias="0.0"
            android:background="@android:color/background_light" android:text="myemail@gmail.com"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button_registration"
            app:layout_constraintEnd_toEndOf="@+id/password_editText_registration"
            app:layout_constraintStart_toStartOf="@+id/password_editText_registration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_editText_registration"/>
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/already_have_an_account_text_view" app:layout_constraintStart_toStartOf="@+id/register_button_registration"
            app:layout_constraintEnd_toEndOf="@+id/register_button_registration"
            app:layout_constraintTop_toBottomOf="@+id/register_button_registration"/>

</androidx.constraintlayout.widget.ConstraintLayout>