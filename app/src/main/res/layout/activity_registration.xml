<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity" android:background="@android:color/holo_green_light">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-28dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/scrollView2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/linearLayout">

            <Button
                    android:text="Select Photo"
                    android:layout_width="158dp"
                    android:layout_height="150dp" android:id="@+id/select_photo_button_registration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintTop_toTopOf="parent" android:textColor="#F2F2F2"
                    android:background="@drawable/rounded_select_photo"
                    android:layout_marginTop="36dp"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/username_editText_registration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="username" android:paddingLeft="10dp"
                    android:background="@drawable/rounded_edittext_login_registration"
                    app:layout_constraintTop_toBottomOf="@+id/select_photo_button_registration"
                    android:layout_marginTop="24dp"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="52dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/email_editText_registration"
                    app:layout_constraintStart_toStartOf="@+id/username_editText_registration"
                    app:layout_constraintEnd_toEndOf="@+id/username_editText_registration"
                    app:layout_constraintTop_toBottomOf="@+id/username_editText_registration"
                    android:hint="email" android:paddingLeft="10dp" app:layout_constraintHorizontal_bias="0.0"
                    android:background="@drawable/rounded_edittext_login_registration"
                    android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password_editText_registration"
                    app:layout_constraintEnd_toEndOf="@+id/username_editText_registration"
                    app:layout_constraintStart_toStartOf="@+id/username_editText_registration"
                    android:hint="password"
                    android:paddingLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/email_editText_registration"
                    app:layout_constraintHorizontal_bias="0.474"
                    android:background="@drawable/rounded_edittext_login_registration"
                    android:layout_marginTop="10dp"/>
            <Button
                    android:text="Register"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_button_registration"
                    app:layout_constraintEnd_toEndOf="@+id/password_editText_registration"
                    app:layout_constraintStart_toStartOf="@+id/password_editText_registration"
                    app:layout_constraintTop_toBottomOf="@+id/password_editText_registration"
                    android:background="@drawable/rounded_button" android:textColor="#F2F2F2"
                    android:layout_marginTop="10dp" app:layout_constraintHorizontal_bias="0.496"/>
            <TextView
                    android:text="Already have an account?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:id="@+id/already_have_an_account_text_view"
                    app:layout_constraintStart_toStartOf="@+id/register_button_registration"
                    app:layout_constraintEnd_toEndOf="@+id/register_button_registration"
                    app:layout_constraintTop_toBottomOf="@+id/register_button_registration"
                    android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.459"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>