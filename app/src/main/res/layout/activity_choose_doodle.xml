<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chooseDoodleActivity" android:background="@color/toucandoodle_cerulean">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/doodleName_editText" android:layout_marginTop="132dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Doodle Name"
            android:background="@drawable/rounded_edittext_login_registration" android:paddingLeft="10dp"/>
    <Button
            android:text="Join Doodle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/joinDoodle_button"
            app:layout_constraintEnd_toEndOf="@+id/doodleName_editText"
            app:layout_constraintStart_toStartOf="@+id/doodleName_editText"
            android:background="@drawable/rounded_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/doodleName_editText"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="If the doodle does not exist then it will be created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doodleInfo_textView" app:layout_constraintStart_toStartOf="@+id/joinDoodle_button"
            app:layout_constraintEnd_toEndOf="@+id/joinDoodle_button"
            app:layout_constraintTop_toBottomOf="@+id/joinDoodle_button" android:layout_marginTop="16dp"
            android:textColor="#00F7F4F4" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>